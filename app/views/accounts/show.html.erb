<% if @back_link %>
<p><%= link_to '<- Back', @back_link %></p>
<% end %>

<%= link_to 'New transfer', @new_transfer_link %>

<% if @transfers.present? %>
<h3>Transfer history</h3>
<table>
    <thead>
        <tr>
            <th>Date</th>
            <th>Account</th>
            <th>Amount</th>
            <th>Remark</th>
        </tr>
    </thead>
    <tbody>
        <% @transfers.each do |date, account, amount, remark| %>
        <tr>
            <td><%= date %></td>
            <td><%= account %></td>
            <td><%= amount %></td>
            <td><%= remark %></td>
        </tr>
    <% end %>
    </tbody>
</table>
<% end %>
