<h1>Welcome</h1>
<% if flash[:error] %>
<p style="color: red; font-weight: bold"><%= flash[:error] %></p>
<% end %>

<%= form_tag login_path do %>
    <%= label_tag "Login" %>
    <%= text_field_tag :login %>
    <%= label_tag "Password" %>
    <%= password_field_tag :password %>
    <%= submit_tag "Log In"%>
<% end %>
